<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorAccent">

    <TextView
        android:id="@+id/idCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/all_empty_round"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/farmacoCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway_bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Title"
                android:text="FARMACO: " />

            <TextView
                android:id="@+id/prezzoCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:fontFamily="@font/raleway_regular"
                android:text="PREZZO: " />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/addCardView"
                android:layout_width="match_parent"
                android:padding="15dp"
                android:layout_height="match_parent"
                android:src="@drawable/add"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/removeCardView"
                android:layout_width="match_parent"
                android:padding="15dp"
                android:layout_height="match_parent"
                android:src="@drawable/remove"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>



